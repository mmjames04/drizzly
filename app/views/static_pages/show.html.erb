<section>
	<div id="location_search">
		<h2>Search a new location</h2>
		<form id="weather_search">
			<input id="weather_search_city" type="text" placeholder="City">
			<input id="weather_search_state" type="text" placeholder="State">
			<input type="submit" value="Let's go">
		</form>
	</div>


	<div id="favorite">
		<h2>Choose from Favorites</h2>
		<select>
			<%= @favorites.each do |favorite| %>
  		<option name="<%=favorite.id%>" value="<%=favorite.city%>,<%=favorite.state%>" id="favorite<%=favorite.id%>"><%=favorite.name%></option>
  		<% end %>
  		<input id="delete_favorite" type="submit" value="Delete Favorite">
		</select>
	</div>
</section>
